{
	"Animations": {
		"prefix" : "angularanimate",
		"body": ["animations: [trigger('myTrigger', [])]"],
		"description": "Create Angular Animations"
	},
	"Animate State: Small": {
		"prefix": "statesmall",
		"body": ["state('small', style({transform: 'scale(1)'})),"],
		"description": "Angular Animation Trigger State: Small"
	},
	"Animate State: Large": {
		"prefix": "statelarge",
		"body": ["state('large', style({transform: 'scale(1.4)'})),"],
		"description": "Angular Animation Trigger State: Large"
	},
	"Animation Transition: Growth (Small <=> Large)": {
		"prefix": "growthtransition",
		"body": ["transition('small <=> large', animate('500ms'))"],
		"description": "Angular Animation Transition - Growth Small to Large"
	},
	"Generate Growth Animation": {
		"prefix": "animategrow",
		"body": ["animations: [trigger('myTrigger', [",
			"\tstate('small', style({transform: 'scale(1)'})),",
			"\tstate('large', style({transform: 'scale(1.4)'})),",
			"\ttransition('small <=> large', animate('500ms'))",
			"])]"],
		"description": "Generate the entire Angular Growth Animation Code Snippet"
	},
	"Animate State: Variable": {
		"prefix": "animatestate",
		"body": ["state('${1:stateName}', style({${2:styleProp}: '${3:styleValue}'})),"],
		"description": "Generate Animations State"
	},
	"Animate Transition: Variable": {
		"prefix": "animatetransition",
		"body": ["transition('${1:state1} <=> ${2:state2}', animate('${3:animateValue}'))"],
		"description": "Generate Animations Transition"
	}
}